generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goal {
  id          Int           @id @default(autoincrement())
  slug        String        @unique @db.Uuid
  title       String
  description String?
  targetDate  DateTime?     @db.Date
  status      GoalStatus    @default(ongoing)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  ProgressLog ProgressLog[]
  Milestone   Milestone[]
}

enum GoalStatus {
  ongoing
  completed
  abandoned
}

model ProgressLog {
  id           Int      @id @default(autoincrement())
  slug         String   @default(uuid())
  goalId       Int
  goal         Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  date         DateTime
  content      String
  studyTime    Int? // 任意なので nullable
  progressRate Int? // 0-100 の範囲はアプリ側で validation する
  mood         Mood? // enum を定義する
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Mood {
  good
  normal
  bad
}

model Milestone {
  id        Int             @id @default(autoincrement())
  slug      String          @default(uuid())
  goalId    Int
  goal      Goal            @relation(fields: [goalId], references: [id], onDelete: Cascade)
  title     String
  dueDate   DateTime?       @db.Date
  status    MilestoneStatus @default(not_started)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum MilestoneStatus {
  not_started
  in_progress
  done
}
